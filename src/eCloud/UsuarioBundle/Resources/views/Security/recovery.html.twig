{% extends '::frontend.html.twig' %}
{% block title %}home {% endblock %}
{% block article %}
<section>
	<div id="login_page">
		<h1>Recuperar cuenta</h1>
		{% if username is defined %}
			<div id="login_form">Email enviado...</div>
		{% else %}
			<div id='login_form'>
			<form method="post">
				<table>
					<tr>
						<td><label for="username">Email</label></td><td><input type="text" id="username" name="_username" value="{{ last_username }}" size="30"/></td>
					</tr>				
				</table>
				<br><button class="mid button green" type="submit">Recuperar</button>
			</form>
		</div>
		{% endif %}
	</div>
</section>

{% endblock %}