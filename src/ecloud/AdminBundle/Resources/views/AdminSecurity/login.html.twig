{% extends '::backend.html.twig' %}
{% block title %}home {% endblock %}
{% block article %}
<section>
{% if error %}
	<div>{{ error.message }}</div>
{% endif %}

	<div class="center">
	<form action="{{ path('admin_login_check') }}" method="post">
	<label for="username">Usuario:</label>
	<input type="text" id="username" name="_username" value="{{ last_username }}" />
	<label for="password">Password:</label>

	<input type="password" id="password" name="_password" />
	{#
	If you want to control the URL the user is redirected to on success (more details
	below)
	<input type="hidden" name="_target_path" value="/account" />
	#}
	<br>
	<input type="checkbox" id="no_cerrar" name="_remember_me" checked />
	<label for="no_cerrar">Recordarme</label>
	<br><button class="mid button green" type="submit">Entrar</button>
	</div>
	
</form>
</section>
{% endblock %}